        {
            "name": "Node.js: Launch Program",
            "request": "launch",
            "args": ["--experimental-json-modules", "--trace-warnings", "--trace-uncaught", "--experimental-specifier-resolution=node", "main.js"],
            // "skipFiles": [
            //     "<node_internals>/**"
            // ],
            "console": "externalTerminal",
            "type": "pwa-node"
        }
